        <item-type>Dimmer</item-type>
        <label>Item Dim</label>
        <description>Control the dim level of an item (between 0 and 100)</description>
        <category>Light</category>
    </channel-type>
    <channel-type id="casambiDimWriteOnly">
        <item-type>Dimmer</item-type>
        <label>Scene/Group Dim</label>
        <description>Control the dim level of a scene or a group (between 0 and 100). Write only.</description>
        <category>Light</category>
    </channel-type>
    <channel-type id="casambiColor">
        <item-type>Color</item-type>
        <label>Luminary Color</label>
        <description>Luminary color specified as HSB (hue, saturation, brightness)</description>
        <category>Light</category>
    </channel-type>
    <channel-type id="casambiCCT">
        <item-type>Dimmer</item-type>
        <label>Luminary Color Temperature</label>
        <description>Luminary color temperature (between min and max Â°K) mapped to 0 - 100</description>
        <category>Light</category>
    </channel-type>
    <channel-type id="casambiWhitelevel">
        <item-type>Dimmer</item-type>
        <label>Luminary White Level</label>
        <description>Luminary white level. Controls balance between color and white components.</description>
        <category>Light</category>
    </channel-type>

</thing:thing-descriptions>
